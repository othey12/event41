{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src/jobs/**/*",
    "src/lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}